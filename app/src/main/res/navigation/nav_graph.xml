<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yigit.notesdemo.view.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_infoPopupFragment"
            app:destination="@id/infoPopupFragment" />
        <action
            android:id="@+id/action_homeFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoPopupFragment"
        android:name="com.yigit.notesdemo.view.InfoPopupFragment"
        android:label="InfoPopupFragment" />
    <fragment
        android:id="@+id/addNoteFragment"
        android:name="com.yigit.notesdemo.view.AddNoteFragment"
        android:label="AddNoteFragment">
        <action
            android:id="@+id/action_addNoteFragment_to_savePopupFragment"
            app:destination="@id/savePopupFragment" />
        <argument
            android:name="edit"
            app:argType="integer" />
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="text"
            app:argType="string" />
        <action
            android:id="@+id/action_addNoteFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.yigit.notesdemo.view.DetailFragment"
        android:label="DetailFragment">
        <action
            android:id="@+id/action_detailFragment_to_addNoteFragment2"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="id"
            app:argType="integer" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment2"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_detailFragment_to_homeFragment3"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/savePopupFragment"
        android:name="com.yigit.notesdemo.view.SavePopupFragment"
        android:label="SavePopupFragment">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="text"
            app:argType="string" />
        <action
            android:id="@+id/action_savePopupFragment_to_addNoteFragment"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_savePopupFragment_to_addNoteFragment2"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_savePopupFragment_to_addNoteFragment3"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_savePopupFragment_to_addNoteFragment4"
            app:destination="@id/addNoteFragment" />
        <action
            android:id="@+id/action_savePopupFragment_to_homeFragment2"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="false" />
        <argument
            android:name="edit"
            app:argType="integer" />
        <argument
            android:name="id"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>